elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

providers:
  - name: vexxhost-ansible-network-mtl1
    cloud: vexxhost-ansible-network
    region-name: 'ca-ymq-1'
    rate: 0.001
    diskimages: &provider_diskimages
      - name: ubuntu-bionic
        config-drive: true
      - name: ubuntu-xenial
        config-drive: true

  - name: vexxhost-ansible-network-sjc1
    cloud: vexxhost-ansible-network
    region-name: sjc1
    rate: 0.001
    diskimages: *provider_diskimages

diskimages:
  - name: ubuntu-bionic
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: bionic
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
  - name: ubuntu-xenial
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: xenial
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
